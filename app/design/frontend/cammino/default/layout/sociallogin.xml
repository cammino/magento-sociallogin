			<block type="sociallogin/fbroot" name="sociallogin_fbroot" template="sociallogin/fbroot.phtml" />
		</reference>
	</default>
	<customer_account_login>
		<reference name="before_body_end">
			<block type="sociallogin/account_login" name="sociallogin_login" template="sociallogin/account/login.phtml" />
